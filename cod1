#include <PubSubClient.h>
#include <ESP8266WiFi.h>

const char* ssid = "samgtu_emp";
const char* password = "ooChaThee4";

// --- НАСТРОЙКИ MQTT ---
const char* mqtt_server = "m3.wqtt.ru"; 
const int mqtt_port = 14263;            
const char* mqtt_user = "u_H7AVTY";     
const char* mqtt_pass = "MFWbG5BG";     

// --- ПИНЫ ---
// Красный (D13 на плате = GPIO 14)
const int relayPin1 = 14;        
// Желтый (D12 на плате = GPIO 12)
const int relayPin2 = 12;        
const int photoresistorPin = A0; 

WiFiClient espClient;
PubSubClient client(espClient);

// Callback для обработки входящих сообщений
void callback(char* topic, byte* payload, unsigned int length) {
  String message;
  for (int i = 0; i < length; i++) {
    message += (char)payload[i];
  }
  
  if (String(topic) == "relay/command") {
    if (message == "ON") {
      digitalWrite(relayPin1, HIGH);
      digitalWrite(relayPin2, HIGH);
      Serial.println("Relays turned ON");
    } else if (message == "OFF") {
      digitalWrite(relayPin1, LOW);
      digitalWrite(relayPin2, LOW);
      Serial.println("Relays turned OFF");
    }
  }
}

void setup() {
  pinMode(relayPin1, OUTPUT);
  pinMode(relayPin2, OUTPUT);
  // Выключаем светодиоды при старте
  digitalWrite(relayPin1, LOW);
  digitalWrite(relayPin2, LOW);
  
  Serial.begin(115200);
  
  connectToWifi();
  
  // ИСПРАВЛЕНИЕ 1: Используем правильную переменную порта (14263)
  client.setServer(mqtt_server, mqtt_port); 
  client.setCallback(callback);
}

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();
  
  int lightLevel = analogRead(photoresistorPin);
  
  // Отладка в порт, чтобы видеть, работает ли датчик
  Serial.print("Lux: ");
  Serial.println(lightLevel);

  String message = String(lightLevel);
  client.publish("luxmeter/data", message.c_str());
  
  delay(1000); 
}

void connectToWifi() {
  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);
  
  WiFi.begin(ssid, password);
  
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  
  Serial.println("");
  Serial.println("WiFi connected");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
}

void reconnect() {
  // Цикл, пока не подключимся
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    
    // ИСПРАВЛЕНИЕ 2: Передаем Логин и Пароль брокеру
    // Генерируем уникальный ID клиента, добавив случайное число, чтобы не выбивало
    String clientId = "ESP8266Client-";
    clientId += String(random(0xffff), HEX);

    if (client.connect(clientId.c_str(), mqtt_user, mqtt_pass)) {
      Serial.println("connected");
      client.subscribe("relay/command"); 
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" try again in 5 seconds");
      delay(5000);
    }
  }
}
